{
  "name": "css-navigator",
  "displayName": "Go To Style (CSS Navigator - StyleSense)",
  "description": "Instantly jump to CSS class and ID definitions with Ctrl+Click. Pro version includes multi-file QuickPick, JS navigation, global search, and advanced features.",
  "version": "1.1.0",
  "publisher": "raredevv",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "css",
    "navigation",
    "go to definition",
    "html",
    "javascript",
    "react",
    "vue",
    "tailwind",
    "php",
    "class",
    "id",
    "styles",
    "premium",
    "pro"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:php",
    "onCommand:stylesense.findDefinition",
    "onCommand:stylesense.enterLicense",
    "onCommand:stylesense.upgrade",
    "onCommand:stylesense.checkLicense",
    "onCommand:stylesense.searchCSS"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stylesense.findDefinition",
        "title": "Go to Style"
      },
      {
        "command": "stylesense.enterLicense",
        "title": "StyleSense: Enter Pro License Key"
      },
      {
        "command": "stylesense.upgrade",
        "title": "StyleSense: Upgrade to Pro"
      },
      {
        "command": "stylesense.checkLicense",
        "title": "StyleSense: Check License Status"
      },
      {
        "command": "stylesense.searchCSS",
        "title": "StyleSense: Search CSS Class or ID"
      }
    ],
    "keybindings": [
      {
        "command": "stylesense.searchCSS",
        "key": "cmd+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "stylesense.findDefinition",
        "key": "cmd+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "stylesense.checkLicense",
        "key": "cmd+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && (resourceExtname == .html || resourceExtname == .js || resourceExtname == .jsx || resourceExtname == .ts || resourceExtname == .tsx || resourceExtname == .vue || resourceExtname == .php)",
          "command": "stylesense.findDefinition",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "stylesense.findDefinition",
          "when": "editorTextFocus"
        },
        {
          "command": "stylesense.enterLicense",
          "title": "StyleSense: Enter Pro License Key"
        },
        {
          "command": "stylesense.upgrade",
          "title": "StyleSense: Upgrade to Pro"
        },
        {
          "command": "stylesense.checkLicense",
          "title": "StyleSense: Check License Status"
        },
        {
          "command": "stylesense.searchCSS",
          "title": "StyleSense: Search CSS Class or ID"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "StyleSense (CSS Navigator)",
      "properties": {
        "goToStyle.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable StyleSense CSS Navigator"
        },
        "goToStyle.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        },
        "goToStyle.searchInNodeModules": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Search for CSS classes in node_modules (useful for Tailwind CSS and framework libraries). **Pro feature**"
        },
        "goToStyle.additionalSearchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/dist/**/*.css",
            "**/build/**/*.css",
            "**/output.css",
            "**/styles.css"
          ],
          "description": "Additional file patterns to search for CSS files (supports glob patterns)"
        },
        "goToStyle.maxSearchResults": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum number of CSS files to search through for performance"
        },
        "goToStyle.showStatusBarInfo": {
          "type": "boolean",
          "default": true,
          "description": "Show search results and progress in the status bar"
        },
        "goToStyle.frameworkDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic framework detection (React, Vue, Angular) for better context matching"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raredevv/css-navigator.git"
  },
  "license": "MIT",
  "author": "raredevv",
  "bugs": {
    "url": "https://github.com/raredevv/css-navigator/issues"
  },
  "homepage": "https://github.com/raredevv/css-navigator"
}